  "universal_guidelines": {
    "testing": "All interactive elements MUST have data-testid attributes (e.g., data-testid='login-submit-btn')",
    "accessibility": "Ensure contrast ratio of gold text on black meets WCAG AA. Use lighter gold (#EEDC9A) for small text.",
    "spacing": "Use comfortable spacing. Minimum gap-4 in grids. Padding p-6 or p-8 for cards.",
    "interactions": "All buttons must have hover/active states. No dead clicks.",
    "mobile": "Public pages must be strictly mobile-first. Width constrained to max-w-md on desktop with a centered layout."
  },
  "implementation_steps": [
    "Update tailwind.config.js with the 'jpm' color palette and font families.",
    "Install 'lucide-react', 'framer-motion', 'sonner', 'clsx', 'tailwind-merge' if not present.",
    "Create a reusable 'GlassCard' component for the public profile.",
    "Create a 'DashboardLayout' component with the dark/gold sidebar.",
    "Ensure all img tags use object-cover and have proper alt text."
  ]
}